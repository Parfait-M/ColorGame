<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/game_background"
                                             tools:context="com.beginner.parfa.colorgame.ColorGuess"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the COLOR"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginEnd="29dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/lossCount"
        android:layout_marginRight="29dp"/>

    <Button
        android:id="@+id/RED"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:onClick="btnClicked"
        android:text="red"
        android:textColor="@color/red"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/YELLOW"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="@+id/editText2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/GREEN"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:onClick="btnClicked"
        android:text="green"
        android:textColor="@color/green"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/RED"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/BLUE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="btnClicked"
        android:text="blue"
        android:textColor="@color/blue"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/PURPLE"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="16dp"/>

    <Button
        android:id="@+id/YELLOW"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="btnClicked"
        android:text="Yellow"
        android:textColor="@color/yellow"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/RED"
        app:layout_constraintBaseline_toBaselineOf="@+id/ORANGE"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/RED"/>

    <Button
        android:id="@+id/ORANGE"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:onClick="btnClicked"
        android:text="orange"
        android:textColor="@color/orange"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PURPLE"/>

    <Button
        android:id="@+id/PURPLE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="btnClicked"
        android:text="purple"
        android:textColor="@color/purple"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/BLUE"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="120dp"
        app:layout_constraintLeft_toLeftOf="@+id/BLUE"/>

    <TextView
        android:id="@+id/incorrect"
        android:layout_width="229dp"
        android:layout_height="45dp"
        android:textSize="18sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lives"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="136dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/editbox_background"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/loss"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <TextView
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:text="Lives:"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/lives"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="22dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:layout_marginEnd="86dp"
        android:ems="10"
        android:inputType="none"
        android:text="Wins"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="24sp"
        android:layout_marginStart="87dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/winCount"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/lives"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="87dp"
        android:layout_marginRight="86dp"/>

    <TextView
        android:id="@+id/loss"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="none"
        android:text="Loss"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lossCount"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView"/>

    <TextView
        android:id="@+id/lossCount"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="15dp"
        android:textSize="24sp"
        android:background="@android:drawable/editbox_background"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/winCount"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/loss"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/winCount"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:textSize="24sp"
        android:background="@android:drawable/editbox_background"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/lossCount"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lossCount"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
